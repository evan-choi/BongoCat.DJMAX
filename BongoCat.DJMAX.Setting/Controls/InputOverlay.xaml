<UserControl
    x:Class="BongoCat.DJMAX.Setting.Controls.InputOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#8E000000"
    mc:Ignorable="d">
    <Border
        Padding="48,32"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="#181616"
        BorderBrush="#26DEDEDE"
        BorderThickness="4"
        Visibility="Visible">
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="22"
            Foreground="#E6E6E6"
            TextAlignment="Center">
            <Run Text="사용하고자 하는 키를 눌러주세요." />
            <LineBreak />
            <Run Text="ESC 키를 누르면 취소됩니다." />
        </TextBlock>
    </Border>
</UserControl>